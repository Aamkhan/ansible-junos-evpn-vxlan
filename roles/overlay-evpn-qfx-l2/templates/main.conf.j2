
protocols {
    bgp {
        group overlay-evpn {
            type internal;
            family evpn {
                signaling;
            }
            local-address {{ host.loopback.ip }};
            local-as {{ overlay.local.asn }};
            multipath;
{% for neighbor in overlay.neighbors %}
            neighbor {{ neighbor }};
{% endfor %}
            bfd-liveness-detection {
                minimum-interval 350;
                multiplier 3;
                session-mode automatic;
            }
        }
    }
    evpn {
        encapsulation vxlan;
        extended-vni-list [ {% for bd in overlay.bridge_domains %} {{ bd.vni_id }} {% endfor %} ];
        multicast-mode ingress-replication;
        vni-options {
{% for bd in overlay.bridge_domains %}
            vni {{ bd.vni_id }} {
                vrf-target export target:1:{{ bd.vni_id }};
            }
{% endfor %}
        }
    }
}

switch-options {
    vtep-source-interface lo0.0;
    vrf-import LEAF-IN;
    vrf-target target:9999:9999;
    route-distinguisher {{ host.loopback.ip }}:1;
}

policy-options {
     policy-statement LEAF-IN {
        term import_leaf_esi {
            from community comm-leaf_esi;
            then accept;
        }
{% for bd in overlay.bridge_domains %}
        term import_vni{{ bd.vni_id }} {
            from community com{{ bd.vni_id }};
            then accept;
        }
{% endfor %}
        term default {
            then reject;
        }
    }
{% for bd in overlay.bridge_domains %}
    community com{{ bd.vni_id }} members target:1:{{ bd.vni_id }};
{% endfor %}
    community comm-leaf_esi members target:9999:9999;
}


vlans {
{% for bd in overlay.bridge_domains %}
    bd{{ bd.vni_id }} {
        vlan-id {{ bd.vlan_id }};
        vxlan {
            vni {{ bd.vni_id }};
            ingress-node-replication;
        }
    }
{% endfor %}
}
